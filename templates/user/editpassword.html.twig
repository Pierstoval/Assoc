{% extends 'user.html.twig' %}

{% block title %}
    Modification du profil de {{ app.user.firstName }} {{ app.user.lastName }}
{% endblock %}

{% block body %}


    <div class="grix xs4 container">
        {% for message in app.flashes('error') %}
            <div class="col-xs4">
                <div class="p-3 my-2 rounded-2 error">{{ message }}</div>
            </div>
        {% endfor %}

        <div class="col-xs4">
            <h1>
                Modification du mot de passe de {{ app.user.firstName }} {{ app.user.lastName }}
            </h1>
            {{ form(form) }}
        </div>
    </div>

{% endblock %}
